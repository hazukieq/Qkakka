<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebViewActivity"
    android:orientation="vertical">
        <com.qmuiteam.qmui.widget.QMUITopBarLayout
            android:id="@+id/webviewAct_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
                <com.qmuiteam.qmui.widget.QMUIProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    app:qmui_max_value="100"
                    app:qmui_background_color="@color/white"
                    app:qmui_progress_color="@color/qmui_btn_blue_text"
                    android:id="@+id/webviewAct_progress"/>
            </LinearLayout>
        </com.qmuiteam.qmui.widget.QMUITopBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webviewAct_frame"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webviewAct_main_frame">
    </FrameLayout>
    </FrameLayout>
</LinearLayout>